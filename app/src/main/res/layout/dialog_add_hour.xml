<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_300"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3dp"
    android:layout_margin="@dimen/dimen_20">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20">
        <TextView
            android:id="@+id/txtEditHourWorking"
            android:text="Thêm Giờ Làm Việc"
            android:textSize="@dimen/dimen_20"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/npHour"
                android:layout_margin="@dimen/dimen_10"
                app:np_max="23"
                app:np_min="0"
                app:np_dividerColor="@color/text"
                app:np_textSize="@dimen/dimen_16"
                app:np_textColor="@color/text"
                app:np_selectedTextSize="@dimen/dimen_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text=":"
                android:textSize="@dimen/dimen_25"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/npMinute"
                android:layout_margin="@dimen/dimen_10"
                app:np_max="23"
                app:np_min="0"
                app:np_dividerColor="@color/text"
                app:np_textSize="@dimen/dimen_16"
                app:np_textColor="@color/text"
                app:np_selectedTextSize="@dimen/dimen_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text=":"
                android:textSize="@dimen/dimen_25"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/npTypeHour"
                android:layout_margin="@dimen/dimen_10"
                app:np_max="23"
                app:np_min="0"
                app:np_dividerColor="@color/text"
                app:np_textSize="@dimen/dimen_16"
                app:np_textColor="@color/text"
                app:np_selectedTextSize="@dimen/dimen_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txtSelectHour"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_gravity="center"
            android:text="Chọn"
            android:textSize="@dimen/dimen_16"
            android:textColor="@color/white"
            android:paddingVertical="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_20"
            android:background="@drawable/corners_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>