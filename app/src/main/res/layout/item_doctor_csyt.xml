<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:background="@color/bg_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"/>

    <LinearLayout
        android:padding="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/img_doctor"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"/>

        <LinearLayout
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="GS.TS Nguyễn Gia Bình"
                android:textSize="@dimen/dimen_sp18"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/ic_action_visit"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"/>

                <TextView
                    android:layout_marginStart="@dimen/dimen_5"
                    android:text="37"
                    android:textSize="@dimen/dimen_sp16"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginStart="@dimen/dimen_20"
                    android:src="@drawable/ic_action_star"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"/>

                <TextView
                    android:layout_marginStart="@dimen/dimen_5"
                    android:text="5"
                    android:textSize="@dimen/dimen_sp16"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:paddingVertical="@dimen/dimen_1"
                android:paddingHorizontal="@dimen/dimen_2"
                android:background="@color/grey_light"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="Nội khoa"
                android:textSize="@dimen/dimen_sp14"
                android:textColor="@color/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginHorizontal="@dimen/dimen_10"
        android:background="@color/grey_light" />

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginHorizontal="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Giá khám:"
            android:textSize="@dimen/dimen_sp14"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentEnd="true"
            android:text="300.000đ"
            android:textSize="@dimen/dimen_sp14"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginHorizontal="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@string/latest_medical_schedule"
                android:textSize="@dimen/dimen_sp16"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/ic_action_time"
                    android:backgroundTint="@color/grey_dark"
                    android:alpha="0.6"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"/>

                <TextView
                    android:id="@+id/txtLatestMedicalSchedule"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:text="07:30, Ngày 25/11"
                    android:textSize="@dimen/dimen_sp14"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/dimen_5"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingVertical="@dimen/dimen_10"
                    android:background="@drawable/bg_common"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:scaleX="-1"
                        android:src="@drawable/stethoscope_1"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"/>

                    <LinearLayout
                        android:layout_marginStart="@dimen/dimen_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/book_examination"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_sp14"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tại cơ sở y tế"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_sp12"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>