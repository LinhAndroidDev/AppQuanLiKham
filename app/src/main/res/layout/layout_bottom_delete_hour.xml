<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutDelete"

    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/footer_shadow_bg"
        android:layout_height="@dimen/dimen_125"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dimen_60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_7"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25dp"
            android:layout_marginHorizontal="@dimen/dimen_150"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_7"
            android:background="@drawable/boder_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_20"
            android:gravity="center">

            <TextView
                android:layout_marginTop="@dimen/dimen_20"
                android:text="Xác Nhận Xoá Thời Gian"
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDeleteHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/dimen_20"
                    android:background="@drawable/corners_text_view"
                    android:paddingHorizontal="@dimen/dimen_30"
                    android:paddingVertical="@dimen/dimen_10"
                    android:text="Xoá"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14" />

                <TextView
                    android:id="@+id/txtCancelDeleteHour"
                    android:layout_marginStart="@dimen/dimen_100"
                    android:layout_marginVertical="@dimen/dimen_20"
                    android:layout_gravity="center"
                    android:text="Huỷ"
                    android:textSize="@dimen/dimen_14"
                    android:textColor="@color/text"
                    android:paddingVertical="@dimen/dimen_10"
                    android:paddingHorizontal="@dimen/dimen_30"
                    android:background="@drawable/corners_text_view_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>