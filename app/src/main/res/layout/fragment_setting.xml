<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_common"
    tools:context=".ui.ui.user.navigation.setting.FragmentSetting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/updateInfoMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_ground_common"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_60"
                android:background="@drawable/boder_avatar"
                android:padding="@dimen/dimen_4">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avtSetting"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_80"
                    android:src="@drawable/user_ad" />

                <ImageView
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/icon_camera"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"/>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/editProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameSetting"
                    style="@style/text_sp16_black_bold" />

                <ImageView
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:src="@drawable/ic_action_edit_department_clinic" />

            </LinearLayout>

            <TextView
                android:id="@+id/phoneSetting"
                style="@style/text_sp16_no_color"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_20"
                android:textSize="@dimen/dimen_sp16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/updateInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/bg_corners_15"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUpdateInfo"
                style="@style/text_sp16_black_bold"
                android:layout_marginTop="@dimen/dimen_20"
                android:text="@string/update_info_person" />

            <TextView
                android:id="@+id/txtNoteUpdateInfo"
                style="@style/text_sp16_no_color"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_20"
                android:gravity="center"
                android:text="@string/note_update_info_person" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_icon_update_infor"
                    android:gravity="bottom|end">

                    <ImageView
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_marginEnd="@dimen/dimen_5"
                        android:layout_marginBottom="@dimen/dimen_3"
                        android:background="@drawable/ic_action_next"
                        android:rotation="180" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/back_ground_common"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_20"
            android:paddingTop="@dimen/dimen_10">

            <TextView
                android:id="@+id/txtSetting"
                style="@style/text_sp14"
                android:text="@string/setting" />

            <LinearLayout
                android:id="@+id/resetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_corners_10"
                    android:backgroundTint="@color/grey">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_margin="@dimen/dimen_10"
                        android:src="@drawable/ic_action_change_password" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginStart="@dimen/dimen_20">

                    <TextView
                        android:id="@+id/txtChangePassword"
                        style="@style/text_sp16"
                        android:layout_centerVertical="true"
                        android:text="@string/change_password" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider" />

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:src="@drawable/ic_action_next_setting" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resetLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_corners_10"
                    android:backgroundTint="@color/grey">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_margin="@dimen/dimen_10"
                        android:src="@drawable/ic_action_language" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60"
                    android:layout_marginStart="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleLanguage"
                            style="@style/text_sp16"
                            android:text="@string/title_language" />

                        <TextView
                            android:id="@+id/txtLanguage"
                            style="@style/text_sp14_no_color"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:text="@string/language" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider" />

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:src="@drawable/ic_action_next_setting" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/back_ground_common"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_20"
            android:paddingTop="@dimen/dimen_10">

            <TextView
                android:id="@+id/txtDifferent"
                style="@style/text_sp14"
                android:text="@string/different" />

            <LinearLayout
                android:id="@+id/failAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_corners_10"
                    android:backgroundTint="@color/grey">

                    <ImageView
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_margin="@dimen/dimen_8"
                        android:background="@drawable/ic_action_fail" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginStart="@dimen/dimen_20">

                    <TextView
                        android:id="@+id/txtFail"
                        style="@style/text_sp16"
                        android:layout_centerVertical="true"
                        android:text="@string/notification_fail" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider" />

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:src="@drawable/ic_action_next_setting" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/conditionAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_corners_10"
                    android:backgroundTint="@color/grey">

                    <ImageView
                        android:layout_width="@dimen/dimen_26"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_marginHorizontal="@dimen/dimen_7"
                        android:layout_marginVertical="@dimen/dimen_8"
                        android:background="@drawable/ic_protect" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginStart="@dimen/dimen_20">

                    <TextView
                        android:id="@+id/txtCondition"
                        style="@style/text_sp16"
                        android:layout_centerVertical="true"
                        android:text="@string/condition" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider" />

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:src="@drawable/ic_action_next_setting" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/deleteAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_corners_10"
                    android:backgroundTint="@color/grey">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_16"
                        android:layout_marginHorizontal="@dimen/dimen_10"
                        android:layout_marginVertical="@dimen/dimen_12"
                        android:background="@drawable/ic_action_delete_account" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginStart="@dimen/dimen_20">

                    <TextView
                        android:id="@+id/txtDeleteAccount"
                        style="@style/text_sp16"
                        android:layout_centerVertical="true"
                        android:text="@string/delete_account" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider" />

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:src="@drawable/ic_action_next_setting" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_corners_10"
                    android:backgroundTint="@color/grey">

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_margin="@dimen/dimen_10"
                        android:src="@drawable/ic_action_logout" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginStart="@dimen/dimen_20">

                    <TextView
                        android:id="@+id/txtLogout"
                        style="@style/text_sp16"
                        android:layout_centerVertical="true"
                        android:text="@string/logout" />

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:src="@drawable/ic_action_next_setting" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>