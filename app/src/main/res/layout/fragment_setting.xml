<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_common"
    tools:context=".ui.ui.user.navigation.setting.FragmentSetting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="@dimen/dimen_60"
                android:paddingEnd="@dimen/dimen_20"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder_avatar"
                    android:padding="@dimen/dimen_4">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avtSetting"
                        android:src="@drawable/user_ad"
                        android:layout_width="@dimen/dimen_90"
                        android:layout_height="@dimen/dimen_90"/>
                </RelativeLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ciEditAvatar"
                    android:layout_marginStart="@dimen/dimen_88"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/icon_photograp"
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="@dimen/dimen_25" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/editProfile"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameSetting"
                    android:text="Nguyễn Hữu Linh"
                    android:textSize="@dimen/dimen_16"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginStart="@dimen/dimen_5"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@drawable/ic_action_edit_department_clinic"/>

            </LinearLayout>

            <TextView
                android:id="@+id/phoneSetting"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_gravity="center"
                android:text="0969601767"
                android:textSize="@dimen/dimen_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/updateInfo"
            android:background="@drawable/bg_update_infor"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginHorizontal="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_marginTop="@dimen/dimen_20"
                android:text="Cập nhật thông tin cá nhân"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_20"
                android:gravity="center"
                android:text="Cập nhật đầy đủ và chính xác thông tin của bạn \nđể nhận được các kết quả khám từ đối tác của \napp và +5000 điểm tích luỹ"
                android:textSize="@dimen/dimen_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/bg_icon_update_infor"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_40"
                    android:gravity="bottom|end">

                    <ImageView
                        android:rotation="180"
                        android:layout_marginEnd="@dimen/dimen_5"
                        android:layout_marginBottom="@dimen/dimen_3"
                        android:background="@drawable/ic_action_next"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"/>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingStart="@dimen/dimen_20"
            android:paddingTop="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Cài đặt"
                android:textSize="@dimen/dimen_14"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/resetPassword"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="@drawable/bg_icon_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="@dimen/dimen_10"
                        android:src="@drawable/ic_action_change_password"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="Đổi mật khẩu"
                        android:textSize="@dimen/dimen_16"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <ImageView
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_action_next_setting"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resetLanguage"
                android:layout_marginVertical="@dimen/dimen_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="@drawable/bg_icon_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="@dimen/dimen_10"
                        android:src="@drawable/ic_action_language"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_centerVertical="true"
                            android:text="Ngôn ngữ/ Language"
                            android:textSize="@dimen/dimen_16"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:text="Tiếng Việt"
                            android:textSize="@dimen/dimen_14" />

                    </LinearLayout>

                    <View
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <ImageView
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_action_next_setting"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingStart="@dimen/dimen_20"
            android:paddingTop="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Khác"
                android:textSize="@dimen/dimen_14"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/conditionAccount"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="@drawable/bg_icon_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/dimen_24"
                        android:layout_height="@dimen/dimen_24"
                        android:layout_margin="@dimen/dimen_8"
                        android:background="@drawable/ic_action_condition_setting" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="Điều khoản sử dụng"
                        android:textSize="@dimen/dimen_16"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <ImageView
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_action_next_setting"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/deleteAccount"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="@drawable/bg_icon_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginHorizontal="@dimen/dimen_10"
                        android:layout_marginVertical="@dimen/dimen_12"
                        android:background="@drawable/ic_action_delete_account"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_16"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="Xoá tài khoản"
                        android:textSize="@dimen/dimen_16"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <ImageView
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_action_next_setting"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout"
                android:layout_marginVertical="@dimen/dimen_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="@drawable/bg_icon_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="@dimen/dimen_10"
                        android:src="@drawable/ic_action_logout"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="Đăng xuất"
                        android:textSize="@dimen/dimen_16"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_action_next_setting"
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>