<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/itemView"
                android:paddingVertical="@dimen/dimen_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/reason"
                    style="@style/text_sp14"
                    android:layout_width="@dimen/dimen_140"
                    android:paddingStart="@dimen/dimen_10"
                    android:text="Lí do thăm khám"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/cccd"
                    style="@style/text_sp14"
                    android:layout_width="@dimen/dimen_160"
                    android:paddingStart="@dimen/dimen_10"
                    android:text="Căn cước công dân" />

                <TextView
                    android:id="@+id/phone"
                    style="@style/text_sp14"
                    android:layout_width="@dimen/dimen_140"
                    android:paddingStart="@dimen/dimen_10"
                    android:text="Số điện thoại" />

                <TextView
                    android:id="@+id/time"
                    style="@style/text_sp14"
                    android:layout_width="@dimen/dimen_160"
                    android:paddingStart="@dimen/dimen_10"
                    android:text="Thời gian khám" />

                <TextView
                    android:id="@+id/state"
                    style="@style/text_sp14"
                    android:layout_width="@dimen/dimen_140"
                    android:paddingStart="@dimen/dimen_10"
                    android:text="Trạng thái" />

                <TextView
                    android:id="@+id/introductionPlace"
                    style="@style/text_sp14"
                    android:layout_width="@dimen/dimen_160"
                    android:paddingStart="@dimen/dimen_10"
                    android:text="Nơi giới thiệu"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    style="@style/text_sp14"
                    android:layout_width="@dimen/dimen_100"
                    android:paddingStart="@dimen/dimen_10"
                    android:text="Hành động" />
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"/>
    </LinearLayout>
</layout>