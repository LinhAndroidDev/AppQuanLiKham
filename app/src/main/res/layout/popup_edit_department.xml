<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/deleteMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_20"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/txtEditDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_22"
                    android:layout_height="@dimen/dimen_22"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:background="@drawable/ic_action_edit_department_clinic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dimen_15"
                    android:paddingVertical="@dimen/dimen_8"
                    android:text="Edit"
                    android:textColor="@color/text"
                    android:textSize="@dimen/dimen_sp14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.8"
                android:layout_marginHorizontal="@dimen/dimen_10"
                android:background="#0C000000" />

            <LinearLayout
                android:id="@+id/txtDeleteDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_22"
                    android:layout_height="@dimen/dimen_22"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:background="@drawable/ic_action_delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dimen_15"
                    android:paddingVertical="@dimen/dimen_8"
                    android:text="Delete"
                    android:textColor="@color/text"
                    android:textSize="@dimen/dimen_sp14" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
