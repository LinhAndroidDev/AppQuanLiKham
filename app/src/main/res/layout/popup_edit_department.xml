<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15">

                <TextView
                    style="@style/text_sp16_black_bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Giờ làm việc"
                    android:textSize="@dimen/dimen_18" />

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="@dimen/dimen_15"
                    android:layout_height="@dimen/dimen_15"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_delete_search"
                    app:tint="@color/grey_1" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">

                <TextView
                    style="@style/text_sp16_black_bold"
                    android:text="● Thứ 2: 07:00 -16:30" />

                <TextView
                    style="@style/text_sp16"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Nghỉ trưa: 12:00 - 13:30"
                    android:textColor="@color/txt_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">

                <TextView
                    style="@style/text_sp16_black_bold"
                    android:text="● Thứ 3: 07:00 -16:30" />

                <TextView
                    style="@style/text_sp16"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Nghỉ trưa: 12:00 - 13:30"
                    android:textColor="@color/txt_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">

                <TextView
                    style="@style/text_sp16_black_bold"
                    android:text="● Thứ 4: 07:00 -16:30" />

                <TextView
                    style="@style/text_sp16"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Nghỉ trưa: 12:00 - 13:30"
                    android:textColor="@color/txt_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">

                <TextView
                    style="@style/text_sp16_black_bold"
                    android:text="● Thứ 5: 07:00 -16:30" />

                <TextView
                    style="@style/text_sp16"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Nghỉ trưa: 12:00 - 13:30"
                    android:textColor="@color/txt_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">

                <TextView
                    style="@style/text_sp16_black_bold"
                    android:text="● Thứ 6: 07:00 -16:30" />

                <TextView
                    style="@style/text_sp16"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Nghỉ trưa: 12:00 - 13:30"
                    android:textColor="@color/txt_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">

                <TextView
                    style="@style/text_sp16_black_bold"
                    android:text="● Thứ 7: Nghỉ" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_25"
                android:orientation="vertical">

                <TextView
                    style="@style/text_sp16_black_bold"
                    android:text="● CN: Nghỉ" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
