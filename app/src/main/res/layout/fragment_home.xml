<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ui.user.home.FragmentHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_border_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_50"
                android:background="@drawable/bg_common"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_80"
                    android:layout_marginBottom="@dimen/dimen_60"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avartarUser"
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="@dimen/dimen_80"
                        android:src="@drawable/user_ad" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginStart="@dimen/dimen_10">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/noteDoctor"
                                android:text="Bác sĩ: "
                                android:textSize="@dimen/dimen_sp18"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/txtUserName"
                                android:textSize="@dimen/dimen_sp18"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/txtUserBirth"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:textSize="@dimen/dimen_sp14"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                app:layout_constraintTop_toBottomOf="@+id/ll_border_info"
                android:background="@drawable/line_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_4"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_35"
                android:layout_marginBottom="@dimen/dimen_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/functionAccessoryPatients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_10"
                        android:orientation="horizontal"
                        android:visibility="visible">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:src="@drawable/ic_action_pay"
                                style="@style/img_function_accessory"/>
                            <TextView
                                android:text="@string/pay"
                                style="@style/txt_function_accessory"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/appointment"
                                android:src="@drawable/ic_action_datlich"
                                style="@style/img_function_accessory"/>
                            <TextView
                                android:text="@string/book"
                                style="@style/txt_function_accessory"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/qrCode"
                                android:src="@drawable/ic_action_qr"
                                style="@style/img_function_accessory"/>
                            <TextView
                                android:text="QR"
                                style="@style/txt_function_accessory"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/functionAccessoryDoctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/dimen_10"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:src="@drawable/ic_action_pay"
                                style="@style/img_function_accessory"/>
                            <TextView
                                android:text="Thanh toán"
                                style="@style/txt_function_accessory"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/addAppoint"
                                android:src="@drawable/ic_action_datlich"
                                style="@style/img_function_accessory"/>
                            <TextView
                                android:text="Thêm lịch"
                                style="@style/txt_function_accessory"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:src="@drawable/ic_action_qr"
                                style="@style/img_function_accessory"/>
                            <TextView
                                android:text="QR"
                                style="@style/txt_function_accessory"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutDoctor"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_manage_appointment_doctor"
                        style="@style/card_function_main"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="5dp">

                        <LinearLayout
                            style="@style/ll_function_main_user">

                            <ImageView
                                style="@style/img_function_main"
                                android:src="@drawable/ic_action_schedule" />

                            <TextView
                                style="@style/txt_function_main"
                                android:textStyle="bold"
                                android:text="Quản lí lịch hẹn"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/card_function_main"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            style="@style/ll_function_main_user">

                            <ImageView
                                style="@style/img_function_main"
                                android:src="@drawable/ic_action_patient" />

                            <TextView
                                style="@style/txt_function_main"
                                android:textStyle="bold"
                                android:text="Quản lí bệnh nhân"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        style="@style/card_function_main"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dimen_8"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">
                        <LinearLayout
                            style="@style/ll_function_main_user">
                            <ImageView
                                android:src="@drawable/ic_action_medicine"
                                style="@style/img_function_main"/>
                            <TextView
                                style="@style/txt_function_main"
                                android:textStyle="bold"
                                android:text="Quản lí thuốc"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvStatisticalAppoint"
                        style="@style/card_function_main"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            style="@style/ll_function_main_user">

                            <ImageView
                                style="@style/img_function_main"
                                android:src="@drawable/ic_action_statistical" />

                            <TextView
                                style="@style/txt_function_main"
                                android:textStyle="bold"
                                android:text="Thống kê lịch hẹn"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPatient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/slide"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200"
                    android:paddingStart="@dimen/dimen_60"
                    android:paddingEnd="@dimen/dimen_60"
                    android:visibility="gone"/>

                <TextView
                    android:text="@string/functions"
                    android:textSize="@dimen/dimen_sp14"
                    android:textColor="@color/black"
                    android:textStyle="italic|bold"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginVertical="@dimen/dimen_10"
                    android:layout_marginHorizontal="@dimen/dimen_15"
                    android:background="@drawable/bg_item_function"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:elevation="@dimen/dimen_2">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_margin="@dimen/dimen_15"
                        android:id="@+id/rcvFunctionMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        android:orientation="horizontal"
                        app:spanCount="2" />

                    <View
                        android:background="@color/bg_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_marginVertical="@dimen/dimen_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:src="@drawable/new_star"
                            android:layout_width="@dimen/dimen_18"
                            android:layout_height="@dimen/dimen_18"/>

                        <TextView
                            android:layout_marginStart="@dimen/dimen_5"
                            android:text="@string/my_favourites"
                            android:textSize="@dimen/dimen_sp14"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginStart="@dimen/dimen_5"
                            android:paddingVertical="@dimen/dimen_2"
                            android:paddingHorizontal="@dimen/dimen_7"
                            android:background="@drawable/bg_corners_25"
                            android:backgroundTint="@color/txt_red"
                            android:text="@string/new_favourites"
                            android:textSize="@dimen/dimen_sp14"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/titleDoctorHighlight"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:background="@drawable/ic_action_star"
                            android:backgroundTint="@color/orange"
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="@dimen/dimen_20"/>

                        <TextView
                            android:layout_marginStart="@dimen/dimen_5"
                            android:text="@string/doctor_hightlight"
                            android:textSize="@dimen/dimen_sp14"
                            android:textColor="@color/black"
                            android:textStyle="italic|bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <include
                        android:id="@+id/seeMoreDoctor"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_see_more"/>

                </RelativeLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/slideHighlightDoctor"
                    android:paddingEnd="@dimen/dimen_60"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_120" />

                <RelativeLayout
                    android:id="@+id/titleHandbook"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="@string/medical_handbook"
                        android:textSize="@dimen/dimen_sp14"
                        android:textColor="@color/black"
                        android:textStyle="italic|bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <include
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_see_more"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvMedicalHandbook"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                <RelativeLayout
                    android:id="@+id/titleCsyt"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginHorizontal="@dimen/dimen_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="@string/top_medical_facility"
                        android:textSize="@dimen/dimen_sp14"
                        android:textColor="@color/black"
                        android:textStyle="italic|bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <include
                        android:id="@+id/seeMoreCsyt"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_see_more"/>

                </RelativeLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvTopCsyt"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>
                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>