<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_15"
    android:layout_marginVertical="@dimen/dimen_5"
    app:cardCornerRadius="@dimen/dimen_5"
    app:cardElevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dimen_5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dimen_18"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/day"
                android:layout_marginTop="@dimen/dimen_20"
                style="@style/text_sp16_black_bold"
                android:text="03"
                android:textSize="45sp"
                android:textColor="@color/background"
                android:alpha="0.7"/>

            <TextView
                android:id="@+id/monthAndYear"
                style="@style/text_sp14_black_bold"
                android:text="01/2024" />

            <TextView
                android:id="@+id/hour"
                style="@style/text_sp14"
                android:text="09:00"
                android:textColor="@color/txt_hint" />
        </LinearLayout>

        <View
            android:background="@color/grey_light"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_8"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/text_sp16_black_bold"
                android:textSize="@dimen/dimen_sp18"
                android:text="Tư vấn trực tuyến với BS"/>

            <TextView
                style="@style/text_sp16_black_bold"
                android:textSize="@dimen/dimen_sp18"
                android:text="Nguyễn Thị Thanh"/>

            <TextView
                android:layout_marginTop="@dimen/dimen_10"
                style="@style/text_sp14"
                android:text="Bác Sĩ Ơi - Phòng Khám 020"/>

            <TextView
                android:layout_marginTop="@dimen/dimen_10"
                style="@style/text_sp16"
                android:text="NGUYỄN HỮU LINH"
                android:textColor="@color/txt_hint"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>