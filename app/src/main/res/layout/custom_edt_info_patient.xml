<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/important"
            style="@style/text_sp14"
            android:text="*"
            android:textColor="@color/txt_red"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/title"
            android:layout_marginStart="@dimen/dimen_5"
            style="@style/text_sp14"
            android:text="Tên bệnh nhân" />
    </LinearLayout>
    
    <EditText
        android:id="@+id/edtInfo"
        android:layout_marginTop="@dimen/dimen_10"
        android:hint="Tìm theo tên bệnh nhân"
        android:textColorHint="@color/txt_hint"
        android:textSize="@dimen/dimen_sp14"
        android:paddingVertical="@dimen/dimen_12"
        android:paddingStart="@dimen/dimen_15"
        android:background="@drawable/bg_edit_search_info_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:imeOptions="actionDone"/>

    <Spinner
        android:id="@+id/pulldown"
        android:textSize="@dimen/dimen_sp12"
        android:layout_marginTop="@dimen/dimen_10"
        android:paddingVertical="@dimen/dimen_12"
        android:paddingStart="@dimen/dimen_15"
        android:background="@drawable/bg_edit_search_info_patient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_46"
        android:visibility="gone"/>
</LinearLayout>