<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:paddingTop="@dimen/dimen_25"
        android:paddingBottom="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_warning"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_25"
                app:tint="@color/orange"/>

            <TextView
                android:layout_marginStart="@dimen/dimen_10"
                android:text="Bạn xác nhận bệnh nhân này được ra viện?"
                style="@style/text_sp16_black_bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cancleDialog"
                android:text="Huỷ"
                android:paddingVertical="@dimen/dimen_7"
                android:paddingHorizontal="@dimen/dimen_15"
                android:background="@drawable/boder_grey_corner_5"
                style="@style/text_sp14"/>

            <TextView
                android:id="@+id/confirm"
                android:layout_marginStart="@dimen/dimen_10"
                android:text="Xác nhận"
                android:textColor="@color/pink"
                android:paddingVertical="@dimen/dimen_7"
                android:paddingHorizontal="@dimen/dimen_10"
                android:background="@drawable/boder_red_corner_5"
                style="@style/text_sp14"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>