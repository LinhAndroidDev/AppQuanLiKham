<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.ui.user.csyt.FragmentInfoCsyt">

    <include
        android:id="@+id/headerInfoCsyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_header"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginVertical="@dimen/dimen_20"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_80"
                android:src="@drawable/user_ad"
                app:civ_border_width="@dimen/dimen_1"
                app:civ_border_color="@color/bg_blue_light"/>

            <TextView
                android:layout_gravity="center_horizontal"
                android:text="Bệnh Viện Phổi Trung Ươnng"
                android:textSize="@dimen/dimen_sp20"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:text="@string/number_book"
                        android:textSize="@dimen/dimen_sp16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="11885"
                        android:textSize="@dimen/dimen_sp20"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:background="@color/grey"
                    android:layout_width="@dimen/dimen_1"
                    android:layout_height="@dimen/dimen_60"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:text="@string/evaluate"
                        android:textSize="@dimen/dimen_sp16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="4.2"
                        android:textSize="@dimen/dimen_sp20"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginHorizontal="@dimen/dimen_10"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"/>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/ic_action_location"
                    android:alpha="0.6"
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="@dimen/dimen_25"/>

                <TextView
                    android:layout_marginStart="@dimen/dimen_20"
                    android:text="463 Đường Hoàng Hoa Thám, Vĩnh Phúc, Ba Đình, Thành phố Hà Nội, Vĩnh Phúc, Ba Đình..."
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginHorizontal="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@drawable/ic_action_time"
                    android:backgroundTint="@color/grey_dark"
                    android:alpha="0.6"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"/>

                <TextView
                    android:text="@string/see_schedule"
                    android:textColor="@color/text"
                    android:textSize="@dimen/dimen_sp16"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginHorizontal="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:alpha="0.6"
                    android:background="@drawable/bg_search_date"
                    android:backgroundTint="@color/grey_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_action_infor"
                        android:layout_width="@dimen/dimen_18"
                        android:layout_height="@dimen/dimen_18"/>

                </LinearLayout>

                <TextView
                    android:layout_marginStart="@dimen/dimen_20"
                    android:text="@string/info_csyt_under_text"
                    android:textSize="@dimen/dimen_sp16"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>