<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_common"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_60"
            android:layout_marginBottom="@dimen/dimen_20">

            <ImageView
                android:id="@+id/backHeader"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_24"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_back_white" />

            <TextView
                android:id="@+id/titleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/dimen_40"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_sp20"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/setting"
                android:layout_width="@dimen/dimen_22"
                android:layout_height="@dimen/dimen_22"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_setting"
                android:visibility="gone" />

        </RelativeLayout>

        <com.example.appkhambenh.ui.ui.common.CustomSearch
            android:id="@+id/searchHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_15"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5"
        android:background="@drawable/line_divider" />

</LinearLayout>