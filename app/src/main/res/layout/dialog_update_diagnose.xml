<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_dark_light"
            android:paddingHorizontal="@dimen/dimen_20"
            android:paddingVertical="@dimen/dimen_15">

            <TextView
                style="@style/text_sp16_black_bold"
                android:layout_width="match_parent"
                android:text="Cập nhật chẩn đoán"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_sp18" />
        </RelativeLayout>

        <com.example.appkhambenh.ui.ui.doctor.CustomEdtSearchInfoPatient
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginHorizontal="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_info="Chẩn đoán trước đó"
            app:hint_info=""
            app:important="true"/>

        <com.example.appkhambenh.ui.ui.doctor.CustomEdtSearchInfoPatient
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginHorizontal="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_info="Chẩn đoán hiện tại"
            app:hint_info=""
            app:important="true"/>

        <com.example.appkhambenh.ui.ui.doctor.CustomEdtSearchInfoPatient
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginHorizontal="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_info="Chẩn đoán ra viện"
            app:hint_info=""
            app:important="true"/>

        <com.example.appkhambenh.ui.ui.doctor.CustomEdtSearchInfoPatient
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginHorizontal="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title_info="Chẩn đoán cấp cứu"
            app:hint_info=""
            app:important="true"/>
        
        <androidx.cardview.widget.CardView
            android:layout_marginVertical="@dimen/dimen_15"
            android:layout_marginEnd="@dimen/dimen_15"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/blue_dark_light">
            
            <TextView
                android:layout_marginVertical="@dimen/dimen_8"
                android:layout_marginHorizontal="@dimen/dimen_10"
                android:text="Cập nhật"
                style="@style/text_sp14"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>