<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginHorizontal="@dimen/dimen_15"
        android:background="@drawable/bg_corners_5"
        android:backgroundTint="@color/black_light"
        android:paddingVertical="@dimen/dimen_5"
        android:paddingHorizontal="@dimen/dimen_10"
        style="@style/text_sp14"
        android:text="Cảm ơn \nbác sĩ"
        android:textColor="@color/white"
        android:gravity="center" />

    <ImageView
        android:background="@drawable/triagle"
        android:layout_width="@dimen/dimen_10"
        android:layout_height="@dimen/dimen_7"
        android:rotation="180"/>

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="@dimen/dimen_30"
        android:layout_marginBottom="@dimen/dimen_15"
        app:cardElevation="@dimen/dimen_10">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_heart_bold"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>