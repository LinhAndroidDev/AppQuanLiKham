<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/selectLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtLanguage"
            android:layout_marginVertical="@dimen/dimen_15"
            android:layout_marginStart="@dimen/dimen_20"
            android:text="English"
            android:textSize="@dimen/dimen_sp16"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_30"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20">

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="@dimen/dimen_16"
                android:layout_height="@dimen/dimen_16"
                android:background="@drawable/bg_search_date"
                android:backgroundTint="@color/white"/>

            <ImageView
                android:id="@+id/imgSelectLanguage"
                android:src="@drawable/ic_action_select_language"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:background="@color/bg_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>