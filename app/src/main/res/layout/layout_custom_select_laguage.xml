<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/selectLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtLanguage"
            style="@style/text_sp16_black_bold"
            android:layout_marginVertical="@dimen/dimen_15"
            android:layout_marginStart="@dimen/dimen_20"
            android:text="English" />

        <RelativeLayout
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_30">

            <LinearLayout
                android:layout_width="@dimen/dimen_16"
                android:layout_height="@dimen/dimen_16"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_search_date"
                android:backgroundTint="@color/white" />

            <ImageView
                android:id="@+id/imgSelectLanguage"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:src="@drawable/ic_action_select_language" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_divider" />

</LinearLayout>