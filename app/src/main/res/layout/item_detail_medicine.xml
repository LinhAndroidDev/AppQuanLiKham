<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/itemView"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/inventoryNumber"
                    android:paddingVertical="@dimen/dimen_15"
                    style="@style/text_sp14"
                    android:layout_width="@dimen/dimen_100"
                    android:paddingStart="@dimen/dimen_10"
                    android:text="Số lượng"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/updateDay"
                    style="@style/text_sp14"
                    android:layout_width="@dimen/dimen_140"
                    android:paddingStart="@dimen/dimen_10"
                    android:text="Ngày nhập" />

                <LinearLayout
                    android:layout_width="@dimen/dimen_160"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginStart="@dimen/dimen_10"
                        android:background="@drawable/boder_grey_corner_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginVertical="@dimen/dimen_5"
                            android:layout_marginHorizontal="@dimen/dimen_10"
                            android:src="@drawable/ic_action_edit_department_clinic"
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="@dimen/dimen_20"
                            app:tint="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/dimen_10"
                        android:background="@drawable/boder_grey_corner_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginVertical="@dimen/dimen_5"
                            android:layout_marginHorizontal="@dimen/dimen_10"
                            android:src="@drawable/ic_delete"
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="@dimen/dimen_20"
                            app:tint="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"/>
    </LinearLayout>
</layout>