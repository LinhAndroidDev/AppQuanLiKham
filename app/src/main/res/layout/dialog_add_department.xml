<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_330"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_2"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dimen_20"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtTitleEditDepartment"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="center"
            android:text="Nhập Tên Khoa Phòng"
            android:textSize="@dimen/dimen_22"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtDialogDepartment"
            android:layout_marginTop="@dimen/dimen_20"
            android:hint="Nhập tên khoa"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16"
            android:paddingVertical="@dimen/dimen_10"
            android:gravity="center"
            android:background="@drawable/bg_select_time"
            android:layout_marginHorizontal="@dimen/dimen_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
        <TextView
            android:id="@+id/txtDialogUpdateDepartment"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_gravity="center"
            android:text="Cập nhật"
            android:textSize="@dimen/dimen_16"
            android:textColor="@color/white"
            android:paddingVertical="@dimen/dimen_10"
            android:paddingHorizontal="@dimen/dimen_20"
            android:background="@drawable/corners_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>