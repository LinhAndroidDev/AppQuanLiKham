<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.ui.user.appointment.register.FragmentAppointment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:background="@color/background">

        <ImageView
            android:id="@+id/backAppointment"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_action_back_white"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Đặt lịch hẹn"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarAppointment"
            android:layout_marginStart="10dp"
            android:src="@drawable/user_ad"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/txtUseNameAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/avatarAppointment"
            android:text="Hà Hữu Hải"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="italic" />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="Chọn dịch vụ khám"
            style="@style/title_appoint_function"/>

        <TextView
            android:id="@+id/txt_select_service"
            android:hint="Dịch vụ khám"
            android:background="@drawable/boder_edit_text"
            style="@style/edt_appoint_function" />

        <TextView
            android:text="Chọn phòng khám"
            style="@style/title_appoint_function"/>

        <TextView
            android:id="@+id/txt_select_department"
            android:hint="Nhập phòng khám"
            android:background="@drawable/boder_edit_text"
            style="@style/edt_appoint_function"/>

        <TextView
            android:text="Chọn bác sĩ"
            style="@style/title_appoint_function"/>

        <TextView
            android:id="@+id/txt_select_doctor"
            android:hint="Chọn Bác Sĩ"
            android:background="@drawable/boder_edit_text"
            style="@style/edt_appoint_function"/>

        <TextView
            android:text="Ngày"
            style="@style/title_appoint_function"/>

        <TextView
            android:id="@+id/date"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/svn_aptima"
            android:text="Dịch vụ khám"
            android:background="@drawable/boder_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>

        <TextView
            android:text="Giờ"
            style="@style/title_appoint_function"/>

        <TextView
            android:id="@+id/hour"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/svn_aptima"
            android:text="Dịch vụ khám"
            android:background="@drawable/boder_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>

        <TextView
            android:text="Triệu chứng/Lý do"
            style="@style/title_appoint_function"/>

        <EditText
            android:id="@+id/edt_reasons"
            android:hint="Nhập triệu chứng..."
            android:background="@drawable/boder_edit_text"
            style="@style/edt_appoint_function"
            android:inputType="text"
            android:imeOptions="actionDone"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/register_checking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/background">
            <TextView
                android:id="@+id/txtRegister"
                android:text="Đăng Ký Khám"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>