<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ui.user.appointment.FragmentAppointment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:background="@color/background">
        <ImageView
            android:id="@+id/backAppointment"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_action_back_white"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Đặt lịch hẹn"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:background="#4AF3F3F3">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarAppointment"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_action_ad"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/txtUseNameAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Hà Hữu Hải"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:text="Chọn dịch vụ khám"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="5dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:hint="Dịch vụ khám"
            android:background="@drawable/boder_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
        <TextView
            android:layout_marginTop="15dp"
            android:text="Chọn phòng khám"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="5dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:hint="Dịch vụ khám"
            android:background="@drawable/boder_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
        <TextView
            android:layout_marginTop="15dp"
            android:text="Chọn bác sĩ"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="5dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:hint="Dịch vụ khám"
            android:background="@drawable/boder_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
        <TextView
            android:layout_marginTop="15dp"
            android:text="Ngày"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/date"
            android:layout_marginTop="5dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="italic|bold"
            android:hint="Dịch vụ khám"
            android:background="@drawable/boder_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
        <TextView
            android:layout_marginTop="15dp"
            android:text="Giờ"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/hour"
            android:layout_marginTop="5dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="italic|bold"
            android:hint="Dịch vụ khám"
            android:background="@drawable/boder_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
        <TextView
            android:layout_marginTop="15dp"
            android:text="Triệu chứng/Lý do"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:hint="Nhập triệu chứng..."
            android:background="@drawable/boder_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
    </LinearLayout>
</LinearLayout>