<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="@dimen/dimen_10"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgService"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_take_care_of"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameService"
                style="@style/text_sp16_black_bold"
                android:layout_marginTop="20dp"
                android:text="Chụp X-Quang"
                android:textAllCaps="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgService" />

            <TextView
                android:id="@+id/detailService"
                style="@style/text_sp14"
                android:layout_marginTop="5dp"
                android:text="Phòng Khám Chuyên Kh..."
                android:textColor="@color/txt_hint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameService" />

            <TextView
                android:id="@+id/priceService"
                style="@style/text_sp16_black_bold"
                android:layout_marginTop="10dp"
                android:alpha="0.6"
                android:text="120.000 đ"
                android:textColor="@color/txt_red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailService" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>