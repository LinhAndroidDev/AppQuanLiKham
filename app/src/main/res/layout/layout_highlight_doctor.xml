<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_10"
        app:cardCornerRadius="@dimen/dimen_10"
        app:cardElevation="@dimen/dimen_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_common"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgHighlightDoctor"
                android:layout_width="@dimen/dimen_70"
                android:layout_height="@dimen/dimen_70"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dimen_10"
                android:src="@drawable/user_ad" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameHighlight"
                    style="@style/text_sp14_black_bold"
                    android:text="PSG.TS Hoàng Quang Huy"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/specialistHighlight"
                    style="@style/text_sp12"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="Chuyên khoa Tim mạch"
                    android:textColor="@color/white"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/hospitalHighlight"
                    style="@style/text_sp12"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Bệnh Viện Đa Khoa Tp.Hà Nội"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>