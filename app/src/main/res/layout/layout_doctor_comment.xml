<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_blue_white"
    android:padding="@dimen/dimen_10">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avtDoctor"
        android:layout_width="@dimen/dimen_35"
        android:layout_height="@dimen/dimen_35"
        android:src="@drawable/img_doctor"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/dimen_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAnswered"
        style="@style/text_sp14"
        android:layout_marginStart="@dimen/dimen_10"
        android:text="Được trả lời bởi"
        app:layout_constraintStart_toEndOf="@id/avtDoctor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameDoctor"
        style="@style/text_sp16_color_text"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_5"
        android:text="BS Hoàng Thị Lan Vân"
        app:layout_constraintStart_toEndOf="@id/avtDoctor"
        app:layout_constraintTop_toBottomOf="@+id/tvAnswered" />
</androidx.constraintlayout.widget.ConstraintLayout>