<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.doctor.department.EditDepartmentClinicActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rltTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/txtTitle"
                android:text="Chỉnh Sửa Danh Sách Khoa"
                android:textSize="@dimen/dimen_20"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/background"
                android:paddingVertical="@dimen/dimen_15"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/backEditDepartment"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_action_back_white"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llBoderImgAddDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/rltTitle"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:text="Thêm khoa phòng"
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/text"
                android:textStyle="italic"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/addDepartment"
                android:src="@drawable/ic_action_add_appoint"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/dividerCover"
        android:background="#0C000000"
        android:layout_marginHorizontal="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.8"
        android:layout_marginTop="@dimen/dimen_10" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvEditDepartment"
        android:layout_marginHorizontal="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>