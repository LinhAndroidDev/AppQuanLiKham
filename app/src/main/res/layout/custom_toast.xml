<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_10"
    android:id="@+id/layout_toast"
    android:elevation="5dp"
    android:orientation="horizontal"
    android:background="@drawable/boder_toast">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="@string/notification"
            android:textSize="@dimen/dimen_sp16"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtToast"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="Tôi là Dev"
            android:textSize="@dimen/dimen_sp14"
            android:maxWidth="@dimen/dimen_300"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:layout_marginEnd="@dimen/dimen_10"
        android:background="@drawable/icon_app_kham_benh"
        android:layout_width="@dimen/dimen_25"
        android:layout_height="@dimen/dimen_25"/>
    
</LinearLayout>