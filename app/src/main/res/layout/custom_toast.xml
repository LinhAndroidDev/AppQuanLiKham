<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_toast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corners_10"
    android:backgroundTint="@color/grey_light"
    android:elevation="5dp"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_10">

    <LinearLayout
        android:layout_width="@dimen/dimen_300"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_sp16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="Tôi là Dev"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_sp14" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dimen_25"
        android:layout_height="@dimen/dimen_25"
        android:layout_marginEnd="@dimen/dimen_10"
        android:background="@drawable/icon_app_kham_benh" />

</LinearLayout>