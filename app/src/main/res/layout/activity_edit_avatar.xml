<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".ui.ui.user.avatar.EditAvatarActivity">

    <ImageView
        android:id="@+id/imgAvatarEdit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_400"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/txtUpdateAvatar"
        android:text="Cập Nhật Ảnh Đại Diện"
        android:textSize="@dimen/dimen_18"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit_avt"
        android:gravity="center"
        android:paddingVertical="@dimen/dimen_15"
        android:layout_marginHorizontal="@dimen/dimen_30"
        android:layout_marginBottom="@dimen/dimen_70"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>