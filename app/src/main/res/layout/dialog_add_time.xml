<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Nhập thời gian làm việc"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/edtDialogTimeWorking"
                android:layout_marginTop="20dp"
                android:hint="Chọn thời gian"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:background="@drawable/bg_select_time"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtDialogUpdateTimeWorking"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Cập nhật"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/corners_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
</androidx.cardview.widget.CardView>