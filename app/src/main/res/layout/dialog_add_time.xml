<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_330"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_2"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dimen_20"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/dimen_20"
                android:gravity="center"
                android:text="Nhập thời gian làm việc"
                android:textSize="@dimen/dimen_22"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/edtDialogTimeWorking"
                android:layout_marginTop="@dimen/dimen_20"
                android:hint="Chọn thời gian"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_16"
                android:paddingVertical="@dimen/dimen_10"
                android:gravity="center"
                android:background="@drawable/bg_select_time"
                android:layout_marginHorizontal="@dimen/dimen_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtDialogUpdateTimeWorking"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_gravity="center"
                android:text="Cập nhật"
                android:textSize="@dimen/dimen_16"
                android:textColor="@color/white"
                android:paddingVertical="@dimen/dimen_10"
                android:paddingHorizontal="@dimen/dimen_20"
                android:background="@drawable/corners_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
</androidx.cardview.widget.CardView>