<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ui.user.appointment.FragmentTimeWorking">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backTimeWorking"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_action_back_black"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="30dp"/>
        <TextView
            android:text="Chọn thời gian khám"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:background="@drawable/ic_action_back_time"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/txtTimeWorking"
            android:text="Thứ tư, 24 tháng 5"
            android:textSize="18dp"
            android:textColor="@color/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_action_next_time"
            android:layout_width="36dp"
            android:layout_height="38dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listTimeWorking"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>