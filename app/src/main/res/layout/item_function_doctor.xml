<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/viewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_3"
            android:layout_marginBottom="@dimen/dimen_3"
            app:cardElevation="@dimen/dimen_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_15"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    style="@style/text_sp14"
                    android:text="Số bệnh nhân"
                    android:textColor="@color/txt_hint" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:src="@drawable/ic_number_patient"
                        app:tint="@color/blue" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        style="@style/text_sp16_black_bold"
                        android:layout_marginStart="@dimen/dimen_3"
                        android:text="0"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/dimen_sp20"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/viewCover"
            android:layout_width="@dimen/dimen_10"
            android:layout_height="10dp"
            android:visibility="visible"/>
    </LinearLayout>
</layout>