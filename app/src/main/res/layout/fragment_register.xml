<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.register.FragmentRegister">
    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/backRegister"
                android:src="@drawable/ic_action_back"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="30dp"/>
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/icon_y_te"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="Bộ Y Tế"
                    android:textSize="16sp"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="80dp"
            android:text="Đăng kí tài khoản"
            android:textSize="32sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="30dp"
            android:text="Họ và tên"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="10dp"
            android:hint="Nhập đầy đủ họ tên"
            android:textColorHint="@color/txt_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="10dp"
            android:hint="Nhập email"
            android:textColorHint="@color/txt_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Mật khẩu"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="10dp"
            android:hint="Nhập mật khẩu"
            android:textColorHint="@color/txt_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Nhập lại mật khẩu"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="10dp"
            android:hint="Nhập lại mật khẩu"
            android:textColorHint="@color/txt_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Ngày sinh"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="10dp"
            android:hint="dd/mm/yyyy"
            android:textColorHint="@color/txt_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Số điện thoại"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="10dp"
            android:hint="Nhập số điện thoại"
            android:textColorHint="@color/txt_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Địa chỉ"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="10dp"
            android:hint="Nhập địa chỉ"
            android:textColorHint="@color/txt_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
        <LinearLayout
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Huỷ"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/text"
                app:cardElevation="0dp">
                <TextView
                    android:text="Đăng kí"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingVertical="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>