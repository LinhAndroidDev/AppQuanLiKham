<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ui.register.FragmentRegister">

    <LinearLayout
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backRegister"
                android:src="@drawable/ic_action_back"
                android:layout_marginTop="40dp"
                android:layout_width="40dp"
                android:layout_height="30dp"/>

            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/icon_y_te"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:text="Bộ Y Tế"
                    android:textSize="16sp"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="80dp"
            android:text="@string/txt_title_register_account"
            android:textSize="32dp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/title_register_function"
            android:text="@string/txt_title_name" />

        <EditText
            style="@style/edt_register_function"
            android:id="@+id/edtName"
            android:hint="@string/edt_enter_name"
            android:inputType="textEmailAddress"/>

        <TextView
            style="@style/title_register_function"
            android:text="@string/txt_title_email" />

        <EditText
            style="@style/edt_register_function"
            android:id="@+id/edtEmail"
            android:hint="@string/edt_enter_email"
            android:inputType="textEmailAddress"/>

        <TextView
            style="@style/title_register_function"
            android:text="@string/txt_title_password" />

        <EditText
            style="@style/edt_register_function"
            android:id="@+id/edtPassword"
            android:hint="@string/edt_enter_password"
            android:inputType="textPassword" />

        <TextView
            style="@style/title_register_function"
            android:text="@string/txt_title_repeat_password" />

        <EditText
            style="@style/edt_register_function"
            android:id="@+id/edtRepeatPassword"
            android:hint="@string/txt_title_repeat_password"
            android:inputType="textPassword"/>

        <TextView
            android:text="@string/txt_title_date"
            style="@style/title_register_function"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/edtBirth"
                android:hint="@string/edt_enter_date"
                android:paddingEnd="20dp"
                android:textColorHint="@color/txt_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/calendar"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_action_calendar"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </RelativeLayout>

        <TextView
            style="@style/title_register_function"
            android:text="@string/txt_title_phone" />

        <EditText
            style="@style/edt_register_function"
            android:id="@+id/edtPhone"
            android:hint="@string/edt_enter_phone"
            android:inputType="phone"/>

        <TextView
            style="@style/title_register_function"
            android:text="@string/txt_title_address" />

        <EditText
            style="@style/edt_register_function"
            android:id="@+id/edtAddress"
            android:hint="@string/edt_enter_address"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/notificationRegister"
            android:text="Vui lòng nhập "
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Huỷ"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/register"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/text"
                app:cardElevation="0dp">

                <TextView
                    android:text="Đăng kí"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingVertical="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>