<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.register.FragmentRegister">

    <LinearLayout
        android:id="@+id/layoutRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_15"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20">

            <ImageView
                android:id="@+id/backRegister"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_27"
                android:layout_marginTop="@dimen/dimen_40"
                android:src="@drawable/ic_action_back" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:src="@drawable/icon_y_te" />

                <TextView
                    style="@style/text_sp16_color_text_bold"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:gravity="center"
                    android:maxWidth="@dimen/dimen_70"
                    android:text="@string/ministry_of_health" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            style="@style/text_sp16_color_text_bold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_80"
            android:layout_marginBottom="@dimen/dimen_20"
            android:text="@string/title_register_account"
            android:textSize="@dimen/dimen_sp32" />

        <TextView
            style="@style/title_register_function"
            android:text="@string/select_user" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient"
                android:textSize="@dimen/dimen_sp16" />

            <RadioButton
                android:id="@+id/rbDoctor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_30"
                android:text="@string/doctor"
                android:textSize="@dimen/dimen_sp16" />

            <RadioButton
                android:id="@+id/rbAdmin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_30"
                android:text="@string/csyt"
                android:textSize="@dimen/dimen_sp16" />

        </RadioGroup>

        <TextView
            android:id="@+id/txtTitleName"
            style="@style/title_register_function"
            android:text="@string/title_name" />

        <EditText
            android:id="@+id/edtName"
            style="@style/edt_register_function"
            android:hint="@string/enter_name"
            android:inputType="textEmailAddress" />

        <TextView
            style="@style/title_register_function"
            android:text="@string/title_email" />

        <EditText
            android:id="@+id/edtEmail"
            style="@style/edt_register_function"
            android:hint="@string/enter_email"
            android:inputType="textEmailAddress" />

        <LinearLayout
            android:id="@+id/layoutSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/title_register_function"
                android:text="@string/title_sex" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/males"
                    android:textSize="@dimen/dimen_sp16" />

                <RadioButton
                    android:id="@+id/rbWomen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:text="@string/females"
                    android:textSize="@dimen/dimen_sp16" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSpecialist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                style="@style/title_register_function"
                android:text="@string/title_specialist" />

            <EditText
                android:id="@+id/edtSpecialist"
                style="@style/edt_register_function"
                android:hint="@string/enter_specialist"
                android:inputType="textEmailAddress" />

        </LinearLayout>

        <TextView
            style="@style/title_register_function"
            android:text="@string/password" />

        <EditText
            android:id="@+id/edtPassword"
            style="@style/edt_register_function"
            android:hint="@string/enter_password"
            android:inputType="textPassword" />

        <TextView
            style="@style/title_register_function"
            android:text="@string/title_repeat_password" />

        <EditText
            android:id="@+id/edtRepeatPassword"
            style="@style/edt_register_function"
            android:hint="@string/title_repeat_password"
            android:inputType="textPassword" />

        <LinearLayout
            android:id="@+id/layoutBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/title_register_function"
                android:text="@string/title_date" />

            <RelativeLayout
                android:id="@+id/layoutDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_2"
                android:layout_marginTop="@dimen/dimen_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/edtBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_date"
                        android:paddingEnd="@dimen/dimen_20"
                        android:textColor="@color/black"
                        android:textColorHint="@color/txt_hint"
                        android:textSize="@dimen/dimen_sp18"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.8"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:background="@color/black" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/calendar"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:src="@drawable/ic_action_calendar" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            style="@style/title_register_function"
            android:text="@string/title_phone" />

        <EditText
            android:id="@+id/edtPhone"
            style="@style/edt_register_function"
            android:hint="@string/enter_phone"
            android:inputType="phone" />

        <TextView
            style="@style/title_register_function"
            android:text="@string/title_address" />

        <EditText
            android:id="@+id/edtAddress"
            style="@style/edt_register_function"
            android:hint="@string/enter_address"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/notificationRegister"
            style="@style/text_sp14"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="Vui lòng nhập "
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cbAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agree_condition" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_sp16"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/text"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <TextView
                    style="@style/text_sp16_black_bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dimen_15"
                    android:text="@string/register"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>