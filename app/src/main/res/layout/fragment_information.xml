<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.user.navigation.information.FragmentInformation">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_60">

                <ImageView
                    android:id="@+id/backInfo"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_22"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:src="@drawable/ic_action_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/infor_user"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_sp20"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/boder_avatar"
                android:padding="@dimen/dimen_4">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatarInfo"
                    android:layout_width="@dimen/dimen_90"
                    android:layout_height="@dimen/dimen_90"
                    android:src="@drawable/user_ad" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/name_user"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_sp16"
                    android:textStyle="bold" />

                <com.example.appkhambenh.ui.ui.user.navigation.information.CustomTextViewInfo
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/email_user"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_sp16"
                    android:textStyle="bold" />

                <com.example.appkhambenh.ui.ui.user.navigation.information.CustomTextViewInfo
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/sex_user"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_sp16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:orientation="horizontal">

                    <com.example.appkhambenh.ui.ui.common.CustomRatioBtn
                        android:id="@+id/rbMan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.example.appkhambenh.ui.ui.common.CustomRatioBtn
                        android:id="@+id/rbWomen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_30" />

                </LinearLayout>

                <!--                <RadioGroup-->
                <!--                    android:layout_marginTop="@dimen/dimen_5"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:orientation="horizontal">-->

                <!--                    <RadioButton-->
                <!--                        android:id="@+id/rbMan"-->
                <!--                        android:text="@string/males"-->
                <!--                        android:layout_width="@dimen/dimen_80"-->
                <!--                        android:layout_height="@dimen/dimen_25"/>-->

                <!--                    <RadioButton-->
                <!--                        android:id="@+id/rbWomen"-->
                <!--                        android:layout_marginStart="@dimen/dimen_30"-->
                <!--                        android:text="@string/females"-->
                <!--                        android:layout_width="@dimen/dimen_80"-->
                <!--                        android:layout_height="@dimen/dimen_25"/>-->

                <!--                </RadioGroup>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/birth_user"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_sp16"
                    android:textStyle="bold" />

                <com.example.appkhambenh.ui.ui.user.navigation.information.CustomTextViewInfo
                    android:id="@+id/edtBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/phone_user"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_sp16"
                    android:textStyle="bold" />

                <com.example.appkhambenh.ui.ui.user.navigation.information.CustomTextViewInfo
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/address_user"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_sp16"
                    android:textStyle="bold" />

                <com.example.appkhambenh.ui.ui.user.navigation.information.CustomTextViewInfo
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/changeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_30"
                android:alpha="0.5"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/txtRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_15"
                    android:layout_marginVertical="@dimen/dimen_10"
                    android:text="@string/update_info"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_sp14"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/loadingData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_loading"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>