<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/idAccount"
                android:layout_marginVertical="@dimen/dimen_15"
                style="@style/text_sp14"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dimen_10"
                android:text="26" />

            <TextView
                android:id="@+id/nameAccount"
                style="@style/text_sp14_black_bold"
                android:layout_width="@dimen/dimen_160"
                android:paddingStart="@dimen/dimen_10"
                android:text="Tên tài khoản"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/email"
                style="@style/text_sp14"
                android:layout_width="@dimen/dimen_160"
                android:paddingStart="@dimen/dimen_10"
                android:text="Email"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/timeCreate"
                style="@style/text_sp14"
                android:layout_width="@dimen/dimen_160"
                android:paddingStart="@dimen/dimen_10"
                android:text="Ngày tạo" />

            <TextView
                android:id="@+id/timeUpdate"
                style="@style/text_sp14"
                android:layout_width="@dimen/dimen_160"
                android:paddingStart="@dimen/dimen_10"
                android:text="Thời gian cập nhật" />

            <TextView
                android:id="@+id/role"
                style="@style/text_sp14"
                android:layout_width="@dimen/dimen_160"
                android:gravity="center_horizontal"
                android:text="Role" />
        </LinearLayout>

        <View
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"/>
    </LinearLayout>
</layout>