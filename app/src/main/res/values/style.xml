<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    //fragment register
    <style name="title_register_function">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:textSize">@dimen/dimen_sp14</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edt_register_function">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:textColorHint">@color/txt_hint</item>
        <item name="android:textSize">@dimen/dimen_sp16</item>
    </style>

    //home page with user
    <style name="card_function_main">
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginVertical" tools:ignore="NewApi">@dimen/dimen_15</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="ll_function_main_user">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/dimen_20</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">@dimen/dimen_10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="img_function_main">
        <item name="android:layout_width">@dimen/dimen_25</item>
        <item name="android:layout_height">@dimen/dimen_25</item>
    </style>

    <style name="txt_function_main">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_15</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_sp16</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="img_function_accessory">
        <item name="android:layout_width">@dimen/dimen_30</item>
        <item name="android:layout_height">@dimen/dimen_30</item>
    </style>

    <style name="txt_function_accessory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_sp14</item>
        <item name="android:textColor">@color/text</item>
    </style>

    //fragment appointment
    <style name="title_appoint_function">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_15</item>
        <item name="android:textSize">@dimen/dimen_sp14</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edt_appoint_function">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_5</item>
        <item name="android:padding" tools:ignore="NewApi">@dimen/dimen_10</item>
        <item name="android:textSize">@dimen/dimen_sp15</item>
        <item name="android:textColor">@color/black</item>
    </style>

    //home login with doctor
    <style name="boder_function_doctor">
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/dimen_20</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/dimen_20</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    //Custom Bottom Navigation View
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/dimen_sp10</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/dimen_sp11</item>
    </style>

    //Tab layout
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_sp16</item>
    </style>

    //Tab Selected Examination
    <style name="TabExamination" parent="Widget.Design.TabLayout">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    //Tab UnSelected Examination
    <style name="TabUnSelectedExamination" parent="Widget.Design.TabLayout">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    //Edit Text Update Information
    <style name="edt_update_information">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">@dimen/dimen_10</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/dimen_12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimen_sp16</item>
        <item name="android:background">@drawable/bg_edt_update_info</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/txt_hint</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    //Edit Clinical Examination
    <style name="edit_clinical_examination">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/dimen_15</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">@dimen/dimen_15</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/dimen_10</item>
        <item name="android:textColor">@color/text_common</item>
        <item name="android:textSize">@dimen/dimen_sp14</item>
        <item name="android:background">@drawable/bg_edit_search_info_patient_unselected</item>
        <item name="android:textColorHint">@color/txt_hint</item>
        <item name="android:gravity">start</item>
        <item name="android:lines">4</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

</resources>